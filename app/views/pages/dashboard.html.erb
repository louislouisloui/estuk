<div class="row">
<div class="col-md-4">
	<h1 class="text-centered">Books <%= link_to "New", new_book_path, class: "btn btn-primary btn-small" %></h1>
	<table class="table table-condensed">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Available</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      	<% @books.each do |book| %>
        <tr>
          <td><%= book.id %></td>
          <td><%= link_to book.name, book_path(book) %> </td>
          <td><%= book.availability %></td>
          <td><%= link_to 'Edit', edit_book_path(book) %></td>
        </tr>
        <%end%>
        
      </tbody>
    </table>
</div>
<div class="col-md-4">
	<h1 class="text-centered">Purchased</h1>
</div>
<div class="col-md-4">
	<h1 class="text-centered">Sales</h1>
</div>

</div>